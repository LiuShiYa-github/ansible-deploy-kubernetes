KUBE_APISERVER_OPTS="--logtostderr=false \
--v=2 \
--log-dir=/opt/kubernetes/logs \
--etcd-servers={% for ip in groups.all|sort %}{% if hostvars[ip].vars.etcd_name is defined %}https://{{ ip }}:{{ hostvars[ip].vars.etcd_client_port }}{% endif %}{% if not loop.last%},{% endif %}{% endfor %}  --bind-address={{ ansible_default_ipv4.address }} \
--secure-port=6443 \
--advertise-address={{ ansible_default_ipv4.address }} \
--allow-privileged=true \
--service-cluster-ip-range={{ hostvars[ansible_default_ipv4.address].service_cluster_ip_range }} \
--enable-admission-plugins=NamespaceLifecycle,LimitRanger,ServiceAccount,ResourceQuota,NodeRestriction \
--authorization-mode=RBAC,Node \
--enable-bootstrap-token-auth=true \
--token-auth-file=/opt/kubernetes/cfg/token.csv \
--service-node-port-range=30000-32767 \
--kubelet-client-certificate=/opt/kubernetes/ssl/server.pem \
